{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Gateway",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/gateway",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Attach to Workflow Service",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/workflow_service",
                    "remoteRoot": "/app"
                }
            ]
        }
    ],
    "compounds": [
        {
            "name": "All Services (Local)",
            "configurations": ["Gateway Service", "Workflow Service"]
        }
    ]
}