{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Gateway",
            "type": "docker",
            "request": "attach",
            "platform": "python",
            "service": "gateway",
            "sourceMaps": [
                {
                    "localRoot": "${workspaceFolder}/gateway/app",
                    "remoteRoot": "/app/app"
                }
            ]
        },
        {
            "name": "Docker: Workflow Service",
            "type": "docker",
            "request": "attach",
            "platform": "python",
            "service": "workflow_service",
            "sourceMaps": [
                {
                    "localRoot": "${workspaceFolder}/workflow_service/app",
                    "remoteRoot": "/app/app"
                }
            ]
        }
    ]
}