# Application
APP_NAME=flowops-api
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=3000
DEBUG=true

# MongoDB URI for backward compatibility
MONGODB_URI=mongodb://localhost:27017/flowops

# Prisma database URLs
WORKFLOW_DATABASE_URL=mongodb://localhost:27017/workflow
MEMORY_DATABASE_URL=mongodb://localhost:27017/memory

# RabbitMQ
RABBITMQ_URI=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=flowops
RABBITMQ_QUEUE_WORKFLOW=workflows
RABBITMQ_QUEUE_MEMORY=memory

# Services
SERVICES_WORKFLOW_URL=http://localhost:3001
SERVICES_MEMORY_URL=http://localhost:3002

# CORS
ALLOW_ORIGINS=*
ALLOW_CREDENTIALS=false
ALLOW_METHODS=GET,POST,PUT,DELETE
ALLOW_HEADERS=Content-Type,Authorization 